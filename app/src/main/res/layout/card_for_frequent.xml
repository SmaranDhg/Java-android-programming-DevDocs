<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frqntMainView"
    android:padding="20dp"
    app:cardCornerRadius="19dp">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/frequents_title"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <ImageView
            android:layout_centerHorizontal="true"
                android:padding="5dp"
            android:paddingBottom="-5dp"
            android:id="@+id/frequents_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/android"
            />

            <TextView
                android:layout_marginLeft="8dp"
                android:text="Value Animator "
                android:id="@+id/frequents_class_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/frequents_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/frequents_extra1"
            android:layout_below="@+id/frequents_title"
            android:layout_width="match_parent"
            android:text="cat:Animation pName:android.animation"
            android:layout_height="0dp" />

        <TextView
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/frequents_extra2"
            android:layout_below="@+id/frequents_extra1"
            android:layout_width="match_parent"
            android:text="methods: void wait()\nconstant: INT FACT"
            android:layout_height="0dp" />



        </LinearLayout>

    </RelativeLayout>




</android.support.v7.widget.CardView>