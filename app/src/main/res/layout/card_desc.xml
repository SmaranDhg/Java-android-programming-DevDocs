<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/Desc_crd"
    android:padding="7dp"
    android:layout_margin="3dp"
    app:cardElevation="0px"
    android:layout_height="wrap_content"
    app:cardCornerRadius="17dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<!--    NORMAL-->
    <TextView
        android:visibility="gone"
        android:id="@+id/NORMAL_ttl"
        style="@style/TitleTextOfClasses"
        android:layout_width="match_parent"
        android:background="#12000000"
        android:layout_height="wrap_content"
        android:text="-Constructors"
        android:textSize="18dp" />
    <TextView
        android:visibility="gone"
        android:layout_below="@+id/NORMAL_ttl"
        android:textSize="18dp"
        android:text="Ram narayan is a hungry person in a sense that he,is not into food but something esle!"
        android:layout_width="match_parent"
        style="@style/TitleTextOfClasses"
        android:id="@+id/NORMAL_DESC"
        android:layout_height="wrap_content"
        />

<!--    IN CASE CARD IS USE FOR FUNCTION-->
    <RelativeLayout
        android:id="@+id/ForFunction"
        android:layout_below="@+id/NORMAL_DESC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!--NORMAL1-->
        <RelativeLayout
            android:id="@+id/RC_NORMAL1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/NORMAL_ttl1"
                style="@style/TitleTextOfClasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#12000000"
                android:text="-Constructors"
                android:textSize="18dp" />
            <TextView
                android:layout_below="@+id/NORMAL_ttl1"
                android:textSize="18dp"
                android:text="Ram narayan is a hungry person in a sense that he,is not into food but something else!"
                android:layout_width="match_parent"
                style="@style/TitleTextOfClasses"
                android:id="@+id/NORMAL_DESC1"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

        <!--    TABLE VIEW-->
        <RelativeLayout
            android:layout_below="@+id/RC_NORMAL1"
            android:visibility="gone"
            android:id="@+id/RC_TABLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TableView_ttl"
                style="@style/TitleTextOfClasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#12000000"
                android:text="-Constructors"
                android:textSize="18dp" />
            <TextView
                android:layout_below="@+id/TableView_ttl"
                android:id="@+id/TableView_desc"
                style="@style/TitleTextOfClasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp" />

            <com.evrencoskun.tableview.TableView
                android:layout_below="@+id/TableView_desc"
                android:layout_width="match_parent"
                android:id="@+id/TableView"
                android:layout_height="wrap_content"
                >

            </com.evrencoskun.tableview.TableView>
        </RelativeLayout>

        <!--    LST VIEW-->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/RC_LST"
            android:layout_below="@+id/RC_TABLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/LSt_ttl"
                style="@style/TitleTextOfClasses"
                android:layout_width="match_parent"
                android:background="#12000000"
                android:layout_height="wrap_content"
                android:text="LIST"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/LSt_Desc"
                android:layout_below="@+id/LSt_ttl"
                style="@style/TitleTextOfClasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_below="@+id/LSt_Desc"
                android:id="@+id/LST_RV"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <!--        CODE-->
        </RelativeLayout>
        <!--        CODE-->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/RC_CODE"
            android:layout_below="@+id/RC_LST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/CODE_ttl"
                style="@style/TitleTextOfClasses"
                android:background="#12000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CODE"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/CODE_Desc"
                android:layout_below="@+id/CODE_ttl"
                style="@style/TitleTextOfClasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fuck it ,its descrition and know your lesson!"
                android:textSize="18dp" />

            <TextView
                android:background="#66323211"
                android:textSize="18dp"
                android:text="Ram narayan is a hungry person in a sense that he,is not into food but something esle!"
                android:layout_width="match_parent"
                android:id="@+id/CodeView"
                style="@style/TitleTextOfClasses"
                android:layout_below="@+id/CODE_Desc"
                android:layout_height="wrap_content"
                >

            </TextView>

            <!--        CODE-->
        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>






</android.support.v7.widget.CardView>