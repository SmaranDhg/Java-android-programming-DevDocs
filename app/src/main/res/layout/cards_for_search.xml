<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:id="@+id/srchMainView"
    android:background="#00ffffff"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:id="@+id/ClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/search_result_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="5dp"
                android:paddingBottom="-5dp"
                app:srcCompat="@drawable/android" />

    </RelativeLayout>


        <TextView
            android:id="@+id/search_result_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TextColorDark"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ClassName"
            android:text="Class:"
            android:textSize="10dp" />

        <TextView
            android:textColor="@color/TextColorLight"
            android:layout_toRightOf="@+id/search_result_category"
            android:id="@+id/search_result"
            android:textSize="30dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=" Value Animator"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>