<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/MainView"
    android:layout_height="match_parent"
    tools:context=".Cpp_activity">

    <LinearLayout
    android:id="@+id/AB_Cpp_ACT"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/TittleOfContent"
        style="@style/TitleTextOfClasses"
        android:text="HeaderName" />
</LinearLayout>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/CPP_ACT_PB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#66ffffff"
        android:layout_centerInParent="true"
        />
    <TextView
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:id="@+id/CPP_ACT_USR_PRMT"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        style="@style/TitleTextOfClasses"
        android:textSize="18dp"
        android:textAlignment="center"
        android:text="Please! Tap to refresh." />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/AB_Cpp_ACT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CPP_ACT_RV">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>