<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardsOfClasses"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:layout_marginTop="30dp"
    android:id="@+id/cntForAndroid"
    android:clipToPadding="false"
    android:longClickable="true"
    app:cardCornerRadius="30dp"
   >


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/ALibraryName"
            style="@style/ForContent"
            android:textSize="30dp"
            android:layout_weight="1.25" />

        <TextView
            android:id="@+id/ALibraryDescrition"
            style="@style/ForContent"
            android:fontFamily="@font/assistant_extralight"
            android:textSize="18dp"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/AlibraryCats"
            style="@style/ForContent"
            android:layout_weight="2.25"
            android:fontFamily="@font/assistant_extralight"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="ramkumar\nteski budi\ntesko chora\nrw theski buhari"
            android:textSize="20dp" />


    </LinearLayout>


</android.support.v7.widget.CardView>