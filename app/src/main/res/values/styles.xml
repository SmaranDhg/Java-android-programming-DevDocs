<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorGray</item>
    </style>

    <style name="ForContent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/TextColorLight</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18dp</item>

    </style>

    <style name="TitleTextOfClasses" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textSize">28dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_weight">4.6</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="CardsOfClasses" parent="CardView">
        <item name="cardElevation">0px</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">18dp</item>
        <item name="android:layout_margin">20dp</item>

    </style>


    <style name="ACardsOfClasses" parent="CardView">
        <item name="cardElevation">0px</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_height">wrap_content</item>


    </style>

    <style name="textForIt" parent="Theme.AppCompat.NoActionBar">
        <item name="android:typeface">sans</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="noAnim" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>
